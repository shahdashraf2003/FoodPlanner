<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_border">

    <TextView
        android:id="@+id/tv_guest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest Mode"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_guest_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are currently using the app as a guest. Some features like favorites and calendar are not available."
        android:layout_marginTop="12dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_guest_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="16dp"/>
</LinearLayout>
